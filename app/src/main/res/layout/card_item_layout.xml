<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:id="@+id/item_card"
    android:layout_width="match_parent">


    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/card_item_ripple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mrl_rippleColor="#26000000"
        app:mrl_rippleAlpha="0.10"
        app:mrl_rippleOverlay="false"
        app:mrl_rippleHover="true"
        app:mrl_rippleDimension="1dp"
        app:mrl_rippleDuration="350">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/image_placeholder"
            android:id="@+id/item_card_image"
            android:background="#ddd"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">


            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_card_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="10dp"
                android:textSize="25dp"/>

            <TextView
                android:text="$10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_card_price"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</android.support.v7.widget.CardView>