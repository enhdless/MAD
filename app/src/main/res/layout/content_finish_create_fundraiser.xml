<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_finish_create_fundraiser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hhsfbla.launch.FinishCreateFundraiserActivity"
    tools:showIn="@layout/activity_finish_create_fundraiser">

    <TextView
        android:text="Add a photo (landscape works best!)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image_placeholder"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="19dp"
        android:id="@+id/imagePreview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="311dp"
        android:background="@android:color/white"
        android:padding="5dp"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:scaleType="center" />

    <Button
        android:text="Choose Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagePreview"
        android:layout_alignParentEnd="true"
        android:id="@+id/chooseImageButton" />

    <TextView
        android:text="Describe your organization and fundraiser; why should people contribute?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseImageButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:id="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/descriptionField"
        android:layout_alignParentEnd="true"
        android:maxLines="8"
        android:lines="8"
        android:gravity="top"
        android:padding="10dp"
        android:background="@drawable/edittext_style" />

    <Button
        android:text="Launch Fundraiser!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/launchFundraiserButton"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        style="@style/Widget.AppCompat.Button.Colored" />

</RelativeLayout>
